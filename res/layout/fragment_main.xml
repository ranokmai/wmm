<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
	
    <RelativeLayout
        android:id="@+id/filter_region"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp" >

		<RadioButton
		    android:id="@+id/incoming"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_toRightOf="@+id/filter2"
		    android:text="@string/incoming"
		    android:textSize="18sp" />

		<RadioButton
		    android:id="@+id/outgoing"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignBaseline="@+id/incoming"
		    android:layout_alignBottom="@+id/incoming"
		    android:layout_toRightOf="@+id/incoming"
		    android:text="@string/outgoing"
		    android:textSize="18sp" />

		<TextView
		    android:id="@+id/filter2"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignBaseline="@+id/incoming"
		    android:layout_alignBottom="@+id/incoming"
		    android:layout_marginLeft="12dp"
		    android:text="@string/show_direction"
		    android:textSize="18sp" />
		
	</RelativeLayout>	
	
	<View
	    android:id="@+id/separator"
	    android:layout_width="fill_parent"
	    android:layout_height="1dp"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@+id/filter_region"
	    android:layout_marginBottom="2dp"
	    android:layout_marginTop="0dp"
	    android:background="@color/separator_color"
	    android:paddingTop="50dp" />

	<ListView
	    android:id="@+id/iou_list"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_below="@+id/separator" >
	</ListView>
	
</RelativeLayout>
