<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
	
    <RelativeLayout 
        android:id="@+id/filter_region" 
        android:layout_width="fill_parent"
		android:layout_height="wrap_content"
        >
        
		<TextView 
		    android:id="@+id/filter"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentLeft="true" 
		    android:layout_marginLeft="30dp"
		    android:layout_alignParentTop="true"
		    android:layout_marginTop="30dp"
		    android:text="@string/filter"
		    android:textSize="18sp" />
		
		<Spinner 
		    android:id="@+id/filter_by"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_toRightOf="@+id/filter"
		    android:layout_alignParentTop="true"
		    android:layout_marginTop="20dp"
		    android:layout_marginLeft="20dp"
		    android:textSize="18sp" />

		<RadioButton
		    android:id="@+id/incoming"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_below="@+id/filter_by"
		    android:layout_toRightOf="@+id/filter2"
		    android:text="@string/incoming"
		    android:textSize="18sp" />

		<RadioButton
		    android:id="@+id/outgoing"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignBaseline="@+id/incoming"
		    android:layout_alignBottom="@+id/incoming"
		    android:layout_toRightOf="@+id/incoming"
		    android:text="@string/outgoing"
		    android:textSize="18sp" />

		<TextView
		    android:id="@+id/filter2"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignBaseline="@+id/incoming"
		    android:layout_alignBottom="@+id/incoming"
		    android:layout_alignLeft="@+id/filter"
		    android:text="@string/show_direction"
		    android:textSize="18sp" />
		
	</RelativeLayout>	
	
	<View
	    android:id="@+id/separator"
	    android:layout_width="fill_parent"
	    android:layout_height="1dp"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@+id/filter_region"
	    android:layout_marginTop="20dp"
	    android:layout_marginBottom="2dp"
	    android:background="@color/separator_color"
	    android:paddingTop="50dp" />

	<ListView
	    android:id="@+id/iou_list"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_below="@+id/separator" >
	</ListView>
	
</RelativeLayout>
