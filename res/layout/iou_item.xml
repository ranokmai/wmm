<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/singleItemLayout" >

    <ImageView
        android:id="@+id/singleItemThumbnail"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />


    <TextView
        android:id="@+id/singleItemTitle"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_alignTop="@+id/singleItemThumbnail"
        android:layout_toRightOf="@+id/singleItemThumbnail"
        android:layout_alignParentRight="true"
        android:text="[Placeholder Title]"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>